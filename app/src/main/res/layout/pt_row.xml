<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:background="@drawable/classes_row_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginVertical="4dp"
        android:id="@+id/ptProfilePicImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_person_pin_24"
        android:layout_width="75dp"
        android:layout_height="75dp"/>

    <TextView
        android:id="@+id/ptNameText"
        app:layout_constraintStart_toEndOf="@+id/ptProfilePicImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:fontFamily="@font/montserrat_bold"/>

    <TextView
        android:id="@+id/ptDescText"
        app:layout_constraintStart_toEndOf="@+id/ptProfilePicImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ptNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"/>

</androidx.constraintlayout.widget.ConstraintLayout>